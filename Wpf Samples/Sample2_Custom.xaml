<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Samples"
        
        xmlns:fl="clr-namespace:FlyleafLib.Controls.WPF;assembly=FlyleafLib.Controls.WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Wpf_Samples.Sample2_Custom"
        mc:Ignorable="d"
        
        Title="Flyleaf Sample 2 (Custom)" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="FlyleafStyle1" TargetType="{x:Type fl:Flyleaf}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type fl:Flyleaf}">
                        <Grid>
                            <!-- Custom Content by still using the Embedded Control's Functionality & View Model -->

                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Overlay Text" FontSize="35" Foreground="Orange"/>
                            <TextBlock Text="{Binding Session.SubsText}" FontSize="35" Foreground="Orange"/>
                            <TextBlock Text="{Binding Player.Status}" HorizontalAlignment="Right" FontSize="35" Foreground="Red"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <fl:VideoView  x:Name="flview">
            <fl:Flyleaf x:Name="flwpf" Style="{StaticResource FlyleafStyle1}" />
        </fl:VideoView>
    </Grid>
</Window>
