<Window x:Class="FlyleafPlayer.ChildRendererSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fl="clr-namespace:FlyleafLib.Controls.WPF;assembly=FlyleafLib.Controls.WPF"
        Title="Flyleaf Child Renderers Sample" 
        Height="720" Width="1280"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#FF3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style TargetType="Border" x:Key="ThumbnailBorder">
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF2D2D30" Padding="5">
            <Button x:Name="btnOpen" Content="ðŸ“ Open Video"/>
            <Button x:Name="btnExit" Content="âŒ Exit"/>
            <TextBlock Text="Flyleaf Child Renderers Demo" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="20,0"/>
        </StackPanel>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Main Video View -->
            <Border Grid.Column="0" BorderBrush="#FF007ACC" BorderThickness="2" Margin="5">
                <fl:FlyleafHost x:Name="MainVideoHost" 
                               DetachedResize="None"
                               KeyBindings="Both"
                               MouseBindings="Both"/>
            </Border>
            
            <!-- Thumbnails Panel -->
            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock Text="Child Renderers" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Margin="5"/>
                
                <!-- Thumbnail 1 -->
                <Border x:Name="Thumbnail1Border" Style="{StaticResource ThumbnailBorder}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <fl:FlyleafHost x:Name="Thumbnail1Host" 
                                       Grid.Row="0"
                                       DetachedResize="None"
                                       KeyBindings="None"
                                       MouseBindings="None"/>
                        
                        <StackPanel Grid.Row="1" Background="#FF2D2D30" Padding="5">
                            <TextBlock Text="Thumbnail 1" 
                                      Foreground="White" 
                                      FontWeight="Bold" 
                                      Margin="0,0,0,5"/>
                            <WrapPanel>
                                <Button x:Name="btnZoomIn1" Content="ðŸ”+" ToolTip="Zoom In"/>
                                <Button x:Name="btnZoomOut1" Content="ðŸ”-" ToolTip="Zoom Out"/>
                                <Button x:Name="btnRotate1" Content="â†»" ToolTip="Rotate 90Â°"/>
                                <Button x:Name="btnFlipH1" Content="â†”" ToolTip="Flip Horizontal"/>
                                <Button x:Name="btnFlipV1" Content="â†•" ToolTip="Flip Vertical"/>
                                <Button x:Name="btnReset1" Content="â†º" ToolTip="Reset View"/>
                            </WrapPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Thumbnail 2 -->
                <Border x:Name="Thumbnail2Border" Style="{StaticResource ThumbnailBorder}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <fl:FlyleafHost x:Name="Thumbnail2Host" 
                                       Grid.Row="0"
                                       DetachedResize="None"
                                       KeyBindings="None"
                                       MouseBindings="None"/>
                        
                        <StackPanel Grid.Row="1" Background="#FF2D2D30" Padding="5">
                            <TextBlock Text="Thumbnail 2" 
                                      Foreground="White" 
                                      FontWeight="Bold" 
                                      Margin="0,0,0,5"/>
                            <WrapPanel>
                                <Button x:Name="btnZoomIn2" Content="ðŸ”+" ToolTip="Zoom In"/>
                                <Button x:Name="btnZoomOut2" Content="ðŸ”-" ToolTip="Zoom Out"/>
                                <Button x:Name="btnRotate2" Content="â†»" ToolTip="Rotate 90Â°"/>
                                <Button x:Name="btnFlipH2" Content="â†”" ToolTip="Flip Horizontal"/>
                                <Button x:Name="btnFlipV2" Content="â†•" ToolTip="Flip Vertical"/>
                                <Button x:Name="btnReset2" Content="â†º" ToolTip="Reset View"/>
                            </WrapPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Info Panel -->
                <Border BorderBrush="#FF007ACC" BorderThickness="1" Margin="5" Padding="10" Background="#FF2D2D30">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Instructions" 
                                  Foreground="White" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,5"/>
                        <TextBlock Foreground="#FFCCCCCC" TextWrapping="Wrap" FontSize="11">
                            â€¢ Open a video file using the Open button<LineBreak/>
                            â€¢ Click thumbnails to toggle zoom<LineBreak/>
                            â€¢ Use control buttons to manipulate views<LineBreak/>
                            â€¢ Each thumbnail is independently controlled<LineBreak/>
                            â€¢ All views share the same video player
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF2D2D30" BorderBrush="#FF007ACC" BorderThickness="0,1,0,0">
            <TextBlock x:Name="StatusText" 
                      Text="Ready" 
                      Foreground="White" 
                      Margin="10,5" 
                      FontFamily="Consolas"/>
        </Border>
    </Grid>
</Window>
